<!DOCTYPE html>
<html lang="en">
<% include ./templates/head.ejs %>
<body>
<% include ./templates/header.ejs %>
    <div class = "container">
        <br>
        <h4>Best Goorm</h4>
        <br>
        <div class = "row">
            <% for(let tobacco of tobacco_list) { %>
            <div class = "col-md-2">
                <div class="card bg-light mb-3" style="width: 11rem;">
                    <a href="/tobacco/detail/<%= tobacco.tobacco_id %>">
                        <img src="images/<%= tobacco.brand %>.png" class="card-img-top" alt="" style='width:150px; height: 150px; display:block; margin:10px; text-align: center;'>
                    </a>
                    <div class="card-body">
                        <h5 class="card-title"><%= tobacco.brand %></h5>
                        <h6 class="card-subtitle mb-2 text-muted"><%= tobacco.name %></h6>
                        
                        <span>★</span>
                        <% for(var score_inx = 0; score_inx < tobacco.score-1; ++score_inx) {%>    
                            <span>★</span>
                        <% } %>
                    </div>
                </div>
            </div>    
            <% } %> 
        </div>
        <hr>
        
        <h4>Brand List</h4>
        <div class ="row">
            <% for(let brand of brand_list) { %>
                <div class="card bg-grey text-white" style="width: 10rem; margin: 1em;">
                    <img src="images/<%= brand.brand %>.png" class="card-img" alt="...">
                    <div class="card-img-overlay">
                        <h5 class="card-title text-black"><%= brand.brand %></h5>
                        <!-- <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
                        <p class="card-text">Last updated 3 mins ago</p> -->
                    </div>
                </div>
            <% } %>
        </div>
    </div>
<% include ./templates/footer.ejs %>
</body>
</html>
