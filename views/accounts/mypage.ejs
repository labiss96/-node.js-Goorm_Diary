
<!DOCTYPE html>
<html lang="en">
<head>
<% include ../templates/head.ejs %>
</head>
<body>
<% include ../templates/header.ejs %>
    <div class="container">
        <br>
        <h4><%= user_level %> <%= user_info.username %>님 안녕하세요!</h4>
        <table>
            <tr>
                <td>E-mail</td>
                <td><%= user_info.email %></td>
            </tr>
        </table>
        
        
        <hr>

        <h4>My favorite Goorm</h4>
        <br>
        <div class = "row">
            <% for(var favo of favorite_list) { %>
            <div class = "col-md-2">
                <div class="card bg-light mb-3" style="width: 11rem;">
                    <a href="/tobacco/detail/<%= favo.tobacco_id %>">
                        <img src="/images/<%= favo.brand%>.png" class="card-img-top" alt="" style='width:150px; height: 150px; display:block; margin:10px; text-align: center;'>
                    </a>
                    <div class="card-body">
                        <h5 class="card-title"><%= favo.brand %></h5>
                        <h6 class="card-subtitle mb-2 text-muted"><%= favo.name %></h6>
                    </div>
                </div>
            </div>    
            <% } %> 
        </div>
        <hr>
        <h4>My reviews</h4>
        <br>
            <div class="row">
                <% for (review of my_reviews) {%>
                    <div class = "col-md-3">
                        <div class="card border-secondary mb-3" style="width: 15rem;">
                            <div class="card-header"><%= review.tobacco_brand %><%= review.tobacco_name %></div>
                            <div class="card-body text-secondary">
                                <h5 class="card-title">
                                    <span>★</span>
                                    <% for(var idx = 0; idx < review.score-1; ++idx) {%>    
                                        <span>★</span>
                                    <% } %>
                                </h5>
                                <p class="card-text"><%= review.comment %></p>
                            </div>
                        </div>
                    </div>
                <% } %>
            </div>
