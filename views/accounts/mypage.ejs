                    <option value="<%= tobacco.tobacco_id %>"><%= tobacco.brand %><%= tobacco.name %></option>
                    <%}%>
                </select>
            </div>
            
            <button type="submit">Add</button>
        </form>
    </details>

    </div>    

    

